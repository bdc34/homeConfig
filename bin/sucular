#!/bin/bash

setfacl -m "u:cular:x" $(dirname "$SSH_AUTH_SOCK")
setfacl -m "u:cular:rwx" "$SSH_AUTH_SOCK"

sudo su -l -c "export SSH_AUTH_SOCK=$SSH_AUTH_SOCK \
 GIT_AUTHOR_NAME='Brian D. Caruso' \
 GIT_AUTHOR_EMAIL='bdc34@cornell.edu' \
 GIT_COMMITTER_NAME='Brian D. Caruso' \
 GIT_COMMITTER_EMAIL='bdc34@cornell.edu' ; \
 bash" cular
